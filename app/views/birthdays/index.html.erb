<p id="notice"><%= notice %></p>

<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dayofbirth</th>
      <th>Age</th>
      <th>Sex</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.name %></td>
        <td><%= birthday.dayofbirth %></td>
        <td><%= birthday.age %></td>
        <td><%= birthday.sex %></td>
        <td><%= birthday.user_id %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send mail', 'birthay_reminder_mailer/send_birthday_reminder?birthday' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 

<br>

